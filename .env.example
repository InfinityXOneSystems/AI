# AI Agent Ecosystem - Environment Configuration
# Copy this file to .env and configure your settings

# Core Configuration
NODE_ENV=development
PORT=8080
LOG_LEVEL=info

# Credentials Directory (relative to project root)
CREDENTIALS_DIR=./credentials

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_KEY_FILE=./credentials/gcp-service-account.json
GOOGLE_CLOUD_BUCKET=your-bucket-name

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_ORG=your-organization
GITHUB_REPO=your-repo

# Docker Configuration
DOCKER_SOCKET_PATH=/var/run/docker.sock
DOCKER_COMPOSE_FILE=docker-compose.yml

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# WebSocket Configuration
WS_PORT=8081
WS_MAX_CONNECTIONS=100

# Module Configuration
SYNC_INTERVAL=300000
HEALTH_CHECK_INTERVAL=600000
VALIDATION_INTERVAL=600000
MAINTENANCE_INTERVAL=1800000

# Security
JWT_SECRET=your-jwt-secret-key
API_KEY=your-api-key
ENCRYPTION_KEY=your-encryption-key

# External Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Development
DEBUG=false
DEV_MODE=true

# Python Configuration
PYTHON_PATH=python3
PYTHON_VENV_PATH=./venv

# Database (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/ai_ecosystem
DB_POOL_SIZE=10

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_CLOUD_SYNC=true
ENABLE_AUTO_FIX=true
ENABLE_NOTIFICATIONS=true