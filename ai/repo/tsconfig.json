{
  "extends": "@nx/workspace/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@infinityx/*": ["packages/*/src"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "tmp",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}