{
  "name": "@infinityx/ai-monorepo",
  "version": "1.0.0",
  "description": "FAANG-grade AI monorepo for InfinityXOneSystems",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "nx build",
    "test": "nx test",
    "lint": "nx lint",
    "e2e": "nx e2e",
    "deploy": "nx deploy",
    "ci": "nx ci"
  },
  "devDependencies": {
    "@nx/workspace": "^16.0.0",
    "@nx/js": "^16.0.0",
    "@nx/node": "^16.0.0",
    "@nx/react": "^16.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "nx": {
    "npmScope": "infinityx",
    "affected": {
      "defaultBase": "origin/main"
    },
    "tasksRunnerOptions": {
      "default": {
        "runner": "nx/tasks-runners/default",
        "options": {
          "cacheableOperations": ["build", "lint", "test", "e2e"]
        }
      }
    }
  }
}